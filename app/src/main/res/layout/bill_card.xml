<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/compare2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/heebo"
                android:text="of the population"
                android:textColor="@color/grey"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/precentile"
                app:layout_constraintTop_toBottomOf="@+id/co2w2" />

            <TextView
                android:id="@+id/precentile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/heebo"
                android:text="92%"
                android:textColor="@color/green"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/compare5"
                app:layout_constraintTop_toBottomOf="@+id/co2w2" />

            <TextView
                android:id="@+id/cosnumptionKw3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/heebo"
                android:text="kwh"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/compare7"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/kWh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/heebo"
                android:text="564"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/compare7"
                app:layout_constraintEnd_toStartOf="@+id/cosnumptionKw3" />

            <TextView
                android:id="@+id/compare7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/heebo"
                android:text="then last month"
                android:textColor="@color/grey"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/co2number" />

            <TextView
                android:id="@+id/compare2me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="2dp"
                android:fontFamily="@font/heebo"
                android:text="--%"
                android:textColor="@color/green"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/compare7"
                app:layout_constraintTop_toBottomOf="@+id/co2w2" />

            <TextView
                android:id="@+id/compare5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/heebo"
                android:text="Better then "
                android:textColor="@color/grey"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/co2number" />

            <TextView
                android:id="@+id/co2number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/heebo_bold"
                android:text="332.2"
                android:textSize="28sp"
                android:transitionName="conum"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/monthname" />

            <TextView
                android:id="@+id/co2w2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/heebo_bold"
                android:text="kg"
                android:textColor="@color/grey"
                android:textSize="28sp"
                app:layout_constraintStart_toEndOf="@+id/co2number"
                app:layout_constraintTop_toBottomOf="@+id/monthname" />

            <TextView
                android:id="@+id/monthname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/heebo"
                android:text="December"
                android:textColor="@color/grey"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>